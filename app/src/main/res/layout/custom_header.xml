<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/msg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/message_white" />

    <EditText
        android:id="@+id/search_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/msg"
        android:layout_toRightOf="@+id/notification_menu"
        android:background="#00000000"
        android:drawableLeft="@drawable/search_menu"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint=" Search"
        android:inputType="textAutoComplete"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color" />

    <ImageView
        android:id="@+id/notification_menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/appointment_white" />
</RelativeLayout>
